<div class="modal-body">
    <div class="row-fluid">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr><th>Side Effect Name</th><th>Side Effect Description</th></tr>
            </thead>
            <tbody>
            {%for s in sideeffects%}
                <tr style="cursor:default" onClick="javascript:updateSelectAndCloseModal('#drugsideeffectnames', '#drugsideeffectnameids', '', '{{s.id}}', '{{s.name}}')">
                    <td>{{s.name}}</td>
                    <td>{{s.description}}</td>
                </tr>
             {%endfor%}

            </tbody>
        </table>
    </div>    
</div>