<div class="modal-body">
    <div class="row-fluid">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr><th>Molecule Name</th><th>Molecule Description</th></tr>
            </thead>
            <tbody>
            {%for molecule in molecules%}
                <tr style="cursor:default" onClick="javascript:updateSelectAndCloseModal('#drugtargetnames', '#drugtargetnameids', '', '{{molecule.id}}', '{{molecule.name}}')">
                    <td>{{molecule.name}}</td>
                    <td>{{molecule.description}}</td>
                </tr>
             {%endfor%}

            </tbody>
        </table>
    </div>    
</div>