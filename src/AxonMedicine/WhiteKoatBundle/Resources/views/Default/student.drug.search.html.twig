{%extends "AxonMedicineWhiteKoatBundle:Default:student.drug.disease.without.menu.html.twig"%}

{%block libcontent %}

<div id="someclass">
    <fieldset id="drugrelationships">
        <legend>Search Results</legend>

        <div>
            <table class="table table-striped table-bordered">
                <thead bgcolor="#cccccc">
                    <tr>
                        <th>{{selOption}}</th>
                    </tr>
                </thead>     
                <tbody>
            {%for output in drugSearchOutput %}
                    <tr>
                        <td>{{output.second}}</td>
                    </tr>
             {%endfor%}

             {% if drugSearchOutput is empty %}
                    <tr>
                        <td>0 records found</td>
                    </tr>
             {%endif%}


                </tbody>
            </table>
        </div>

        <div style="padding-top:30px">
            <input class="btn btn-primary btn-lg" type="submit" value="Close Window" onclick="window.close();
                    return true;">
        </div>
</div>
{%endblock%}

{%block tablecontent %}
{%endblock%}
