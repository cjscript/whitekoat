            {%for drug in drugs%}
        <tr >
            <td>{{drug.name}}</td>
            <td>{{drug.description}}</td>
            <td>{{drug.generic ? 'Yes' : 'No'}}</td>
            <td><a href="{{path('dlc_route_remove', { 'id': drug.id })}}">remove</a>
        </tr>
