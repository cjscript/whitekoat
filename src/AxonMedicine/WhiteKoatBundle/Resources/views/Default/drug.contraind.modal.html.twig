<div class="modal-body">
    <div class="row-fluid">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr><th>Contra-ind Name</th><th>Contra-ind Description</th></tr>
            </thead>
            <tbody>
            {%for contraind in contrainds%}
                <tr style="cursor:default" onClick="javascript:updateSelectAndCloseModal('#drugcontraindnames', '#drugcontraindnameids', '', '{{contraind.id}}', '{{contraind.name}}')">
